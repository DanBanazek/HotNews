<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Hot News</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
        @Scripts.Render("~/bundles/modernizr")
        
         @Scripts.Render("~/bundles/jquery")
       @Scripts.Render("~/bundles/jqueryui")
        <script type="text/javascript">
            $(function () {
               
                if (!Modernizr.inputtypes.datetime) {
                    $("input[type='datetime']").datepicker();
                }
            });
        </script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Hot News", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("News", "Index", "News")</li>
                            <li>@Html.ActionLink("Products", "Index", "Products")</li>
                            <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                         
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Best Case, LLC</p>
                </div>
                @if(@User.IsInRole("Admin"))
                  {
                                <div class="float-right">@Html.ActionLink(" Manage Users", "Index", "Users")</div>
                  }
            </div>
        </footer>

        
        @RenderSection("scripts", required: false)
       
    </body>
</html>
